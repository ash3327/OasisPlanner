<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.OasisPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/white</item>

        <item name="colorSecondary">@color/base</item>
        <item name="colorSecondaryVariant">@color/base</item>

        <item name="android:textColor">@color/black</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="navigationRailStyle">@style/Widget.App.NavigationRailView</item>
        <item name="android:alertDialogTheme">@style/CusAlertDialogTheme</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionMenuTextColor">@color/black</item>

        <!-- Status box color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/golos</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">@dimen/fragment_title_textsize</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="Widget.App.NavigationRailView" parent="Widget.MaterialComponents.NavigationRailView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="CusAlertDialogTheme" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/textcolour</item>
    </style>

    <style name="NavItemStyle">
        <item name="android:fontFamily">@font/golos</item>
    </style>
    <style name="NavigationTheme" parent="">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="listPreferredItemHeightSmall">42.5dp</item>
    </style>

    <!-- Different Theme Colors. -->
    <style name="Theme.Red" parent="Theme.OasisPlanner">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_200</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimarySurface">@color/red_500</item>
    </style>
    <style name="Theme.Blue" parent="Theme.OasisPlanner">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimarySurface">@color/blue_500</item>
    </style>
    <style name="Theme.Yellow" parent="Theme.OasisPlanner">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimarySurface">@color/yellow_500</item>
    </style>
    <style name="Theme.Pink" parent="Theme.OasisPlanner">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimarySurface">@color/pink_500</item>
    </style>
    <style name="Theme.Violet" parent="Theme.OasisPlanner">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_500</item>
        <item name="colorPrimaryVariant">@color/violet_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimarySurface">@color/violet_500</item>
    </style>
</resources>