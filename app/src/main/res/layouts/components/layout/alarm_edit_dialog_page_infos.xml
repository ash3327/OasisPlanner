<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="AlarmEditInfosBinding"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDOptionsDropdownBox
                android:id="@+id/aedpi_tag_alarm_type_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:mainIcon="@drawable/menuic_notification"
                app:textSize="@dimen/aedpi_textsize"/>
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDOptionsDropdownBox
                android:id="@+id/aedpi_tag_importance_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:mainIcon="@drawable/ic_importance_exclaimation"
                app:textSize="@dimen/aedpi_textsize"/>
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDContentBox
                android:id="@+id/aedpi_tag_notif_date_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:textHint="@string/tab_date_title"
                app:mainIcon="@drawable/ic_type_agenda"
                app:focusable="false"
                app:textSize="@dimen/aedpi_textsize"
                app:multiLine="true"/>
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDContentBox
                android:id="@+id/aedpi_tag_notif_time_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:textHint="@string/tab_time_title"
                app:mainIcon="@drawable/ic_symb_time"
                app:textSize="@dimen/aedpi_textsize"
                app:focusable="false"/>
            <include layout="@layout/tag_separator"/>
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDContentBox
                android:id="@+id/aedpi_tag_location_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:textHint="@string/tag_loc"
                app:mainIcon="@drawable/ic_location"
                app:textSize="@dimen/aedpi_textsize"/>
            <!-- DATETIME -->
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDDatetimeBox
                android:id="@+id/aedpi_tag_datetime_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:textSize="@dimen/aedpi_textsize"/>
            <!-- Tags -->
            <com.aurora.oasisplanner.presentation.dialog.alarmeditdialog.components.AEDTagsBox
                android:id="@+id/aedpi_tag_tags_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginVertical="3dp"

                app:textSize="@dimen/aedpi_textsize"/>
        </LinearLayout>
    </ScrollView>
</layout>