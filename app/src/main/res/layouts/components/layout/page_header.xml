<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/page_grey_bar_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_50"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/box_vmargin"
    android:padding="7.5dp"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/page_header_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/edit_agenda_details"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/page_header_hpadding"
        android:layout_marginVertical="@dimen/page_header_vpadding"
        android:letterSpacing="0.1"
        android:textSize="@dimen/boxtitle_textsize"/>
    <ImageView
        android:id="@+id/page_header_icon_2"
        android:layout_width="@dimen/big_icon_height"
        android:layout_height="@dimen/big_icon_height"
        android:padding="@dimen/medium_small_big_gap"
        android:src="@drawable/ic_dir_expand"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:id="@+id/page_header_icon"
        android:layout_width="@dimen/big_icon_height"
        android:layout_height="@dimen/big_icon_height"
        android:padding="@dimen/medium_small_big_gap"
        android:src="@drawable/ic_symb_pen"
        android:layout_marginEnd="@dimen/page_header_hpadding"/>
</LinearLayout>