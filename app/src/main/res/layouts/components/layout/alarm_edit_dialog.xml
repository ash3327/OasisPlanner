<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="AlarmEditBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            app:cardCornerRadius="@dimen/card_radius"
            android:layout_marginVertical="@dimen/page_vmargin"
            android:layout_marginHorizontal="@dimen/page_hmargin">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_50"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/page_bottom_height"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bar_type_icon_size"
                        android:background="@color/editAlarm_header_bg"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="@dimen/bar_hpadding_top">
                        <ImageView
                            android:layout_height="@dimen/bar_type_icon_size"
                            android:layout_width="@dimen/bar_type_icon_size"
                            android:src="@drawable/ic_type_agenda"
                            android:padding="@dimen/page_icon_padding"
                            app:tint="@color/editAlarm_textColor" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="@string/page_overhead_edit_alarm"
                            android:textStyle="bold"
                            android:textColor="@color/editAlarm_textColor"/>
                    </LinearLayout>
                    <com.aurora.oasisplanner.presentation.widget.tabselector.TabSelector
                        android:id="@+id/tab_selector"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="30dp"
                        app:bgColor="@color/theme"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:id="@+id/dialog_contents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <LinearLayout
                                android:id="@+id/placeholder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:visibility="invisible">
                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="65dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:gravity="bottom">
                                    <TextView
                                        android:id="@+id/dates_selected_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:text="7月16日"
                                        android:textSize="@dimen/boxtitle_textsize"/>
                                </ScrollView>
                                <com.aurora.oasisplanner.presentation.widget.multidatepicker.MultiDatePicker
                                    android:id="@+id/picker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    app:baseColor="@color/black"
                                    app:invalidColor="@color/grey_200"
                                    app:regularBgColor="@color/transparent_black"
                                    app:regularTextColor="@color/black"
                                    app:diffMonthBgColor="@color/transparent_white"
                                    app:diffMonthTextColor="@color/grey_300"
                                    app:weekDayBgColor="@android:color/transparent"
                                    app:weekDayTextColor="@color/grey_300"
                                    app:highlightedBgColor="@color/yellow_500_a"
                                    app:highlightedTextColor="@color/black"
                                    app:subHighlightedBgColor="@color/yellow_200_a"
                                    app:subHighlightedTextColor="@color/black"
                                    app:padding="0dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/page_bottom_height"
                    android:gravity="end"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="15dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginHorizontal="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/page_confirm"
                            android:background="@color/theme"
                            android:textColor="@color/white"
                            android:padding="10dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/page_cancel"
                        android:textColor="@color/grey"
                        android:padding="10dp"
                        android:layout_marginHorizontal="5dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>