<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="@dimen/medium_icon_height"
        android:layout_height="@dimen/medium_icon_height"
        android:layout_margin="@dimen/edit_alarm_icon_padding"
        android:src="@drawable/ic_tag"
        app:tint="@color/grey_300"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tag_type_til"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tab_tag_title"
        app:boxBackgroundColor="@color/cream"
        app:startIconDrawable="@drawable/menuic_notification">
        <AutoCompleteTextView
            android:id="@+id/tag_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>