<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- DATA CLASS -->
    <data class="ItemEditTagBinding"/>

    <!-- CLICKING AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            app:cardCornerRadius="@dimen/card_doc_radius"
            android:layout_marginVertical="@dimen/page_vmargin"
            android:layout_marginHorizontal="@dimen/page_hmargin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_50"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/item_edit_tag_diag_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bar_type_icon_size"
                        android:background="@color/page_header_bg"
                        android:paddingHorizontal="@dimen/bar_hpadding_top">
                        <ImageView
                            android:layout_height="@dimen/bar_type_icon_size"
                            android:layout_width="@dimen/bar_type_icon_size"
                            android:src="@drawable/ic_type_agenda"
                            android:padding="@dimen/page_icon_padding"
                            app:tint="@color/page_header_textColor" />
                        <TextView
                            android:id="@+id/header"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="@string/page_overhead_new_agenda"
                            android:textStyle="bold"
                            android:textColor="@color/page_header_textColor"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item_edit_tag_diag_header"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"

                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginVertical="3dp">
                        <ImageView
                            android:layout_width="@dimen/medium_icon_height"
                            android:layout_height="@dimen/medium_icon_height"
                            android:layout_margin="@dimen/edit_alarm_icon_padding"
                            android:src="@drawable/ic_tag"
                            app:tint="@color/grey_300"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tag_type_til"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tab_tag_title"
                            app:boxBackgroundColor="@color/cream"
                            app:startIconDrawable="@drawable/menuic_notification">
                            <AutoCompleteTextView
                                android:id="@+id/tag_type_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!-- Text -->
                    <LinearLayout
                        android:id="@+id/tag_content_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"

                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginVertical="3dp">
                        <ImageView
                            android:layout_width="@dimen/medium_icon_height"
                            android:layout_height="@dimen/medium_icon_height"
                            android:layout_margin="@dimen/edit_alarm_icon_padding"
                            android:src="@drawable/ic_type_note"
                            app:tint="@color/grey_300"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tag_content_til"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/cream"
                            android:hint="@string/tab_tag_content_title">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tag_content_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!-- DATETIME -->
                    <LinearLayout
                        android:id="@+id/tag_datetime_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/tag_date_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"

                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginVertical="3dp">
                            <ImageView
                                android:layout_width="@dimen/medium_icon_height"
                                android:layout_height="@dimen/medium_icon_height"
                                android:layout_margin="@dimen/edit_alarm_icon_padding"
                                android:src="@drawable/ic_type_agenda"
                                app:tint="@color/grey_300"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tag_date_til"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:boxBackgroundColor="@color/cream">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tag_date_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tag_date_type_til"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".45"
                                android:paddingStart="6dp"
                                android:hint="@string/tab_tag_date_title"
                                app:boxBackgroundColor="@color/cream">
                                <AutoCompleteTextView
                                    android:id="@+id/tag_date_type_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/tag_time_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"

                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginVertical="3dp">
                            <ImageView
                                android:layout_width="@dimen/medium_icon_height"
                                android:layout_height="@dimen/medium_icon_height"
                                android:layout_margin="@dimen/edit_alarm_icon_padding"
                                android:src="@drawable/ic_symb_time"
                                app:tint="@color/grey_300"/>
                            <NumberPicker
                                android:id="@+id/tag_time_hour_picker"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:background="@color/cream"/>
                            <NumberPicker
                                android:id="@+id/tag_time_minute_picker"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:background="@color/cream"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Choose -->
                    <LinearLayout
                        android:id="@+id/tag_choice_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"

                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginVertical="3dp">
                        <ImageView
                            android:layout_width="@dimen/medium_icon_height"
                            android:layout_height="@dimen/medium_icon_height"
                            android:layout_margin="@dimen/edit_alarm_icon_padding"
                            android:src="@drawable/ic_type_note"
                            app:tint="@color/grey_300"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tag_choice_til"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/cream"
                            android:hint="@string/tab_tag_content_title">
                            <AutoCompleteTextView
                                android:id="@+id/tag_choice_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/page_bottom_height"
                    android:gravity="end"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="15dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/confirm_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginHorizontal="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/page_confirm"
                            android:background="@color/theme"
                            android:textColor="@color/white"
                            android:padding="10dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/page_cancel"
                        android:textColor="@color/grey"
                        android:padding="10dp"
                        android:layout_marginHorizontal="5dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>