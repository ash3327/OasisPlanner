<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="AlarmEditInfosBinding"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/medium_icon_height"
                    android:layout_height="@dimen/medium_icon_height"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_type_note"
                    app:tint="@color/grey_300"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_info_title"/>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:paddingHorizontal="5dp">
                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_75"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aed_infos_alarm_type_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_spinner_title"
                app:startIconDrawable="@drawable/menuic_notification"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <AutoCompleteTextView
                    android:id="@+id/aed_infos_alarm_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aed_infos_imp_type_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/importance_spinner_title"
                app:startIconDrawable="@drawable/ic_importance_exclaimation"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <AutoCompleteTextView
                    android:id="@+id/aed_infos_imp_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_75"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"/>
            <LinearLayout
                android:id="@+id/date_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/medium_icon_height"
                    android:layout_height="@dimen/medium_icon_height"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_type_agenda"
                    app:tint="@color/grey_300"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_date_title"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:paddingHorizontal="5dp"
                    app:cardCornerRadius="15dp">
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:textAlignment="center"
                        android:paddingVertical="8dp"
                        android:textSize="@dimen/small_textsize"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/time_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/medium_icon_height"
                    android:layout_height="@dimen/medium_icon_height"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_symb_time"
                    app:tint="@color/grey_300"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_time_title"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:paddingHorizontal="5dp"
                    app:cardCornerRadius="15dp">
                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_75"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>
    </ScrollView>
</layout>