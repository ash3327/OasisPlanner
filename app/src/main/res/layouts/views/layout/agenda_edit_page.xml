<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- DATA CLASS -->
    <data class="PageBinding"/>

    <!-- CLICKING AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/page_banner_height"

                        android:layout_marginBottom="@dimen/box_vmargin">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src='@drawable/blur_v1'
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/page_agenda_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:paddingStart="@dimen/bar_padding_aftr"
                                android:paddingEnd="@dimen/bar_padding_aftr"
                                android:layout_marginVertical="5dp"

                                app:layout_constraintBottom_toTopOf="@id/page_title"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/type_agenda"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                />
                            <EditText
                                android:id="@+id/page_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="15dp"
                                android:textSize="20sp"
                                android:gravity="left"
                                android:letterSpacing="0.1"
                                android:textColor="@color/white"
                                android:textStyle="bold"

                                android:theme="@style/BarTheme.EditableTheme"
                                android:paddingStart="@dimen/bar_padding_aftr"
                                android:paddingEnd="@dimen/bar_padding_aftr"
                                android:background="@null"
                                android:hint="@string/no_title"

                                android:inputType="textMultiLine"

                                app:layout_constraintBottom_toTopOf="@id/agenda_tags_tv"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <com.aurora.oasisplanner.presentation.widget.taginputeidittext.TagInputEditText
                                android:id="@+id/agenda_tags_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <com.aurora.oasisplanner.presentation.widget.taginputeidittext.TagInputEditText
                        android:id="@+id/page_activities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextTheme"
                        android:textSize="@dimen/page_item_textsize"
                        android:layout_marginHorizontal="25dp"/>
                    <LinearLayout
                        android:id="@+id/page_grey_bar_1"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/grey_50"
                        android:orientation="horizontal"/>
                    <com.aurora.oasisplanner.presentation.widget.AddItemEditText
                        android:id="@+id/page_add_item_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20sp"
                        android:id="@+id/page_sections"
                        tools:listitem="@layout/_page_displist"
                        tools:itemCount="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/page_yellow_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12.5dp"

                        android:gravity="center"
                        android:background="@color/yellow_200"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/page_yellow_label_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_symb_plus"
                            android:layout_marginEnd="5dp"/>
                        <TextView
                            android:id="@+id/page_yellow_label_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Event"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/page_yellow_label2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12.5dp"

                        android:gravity="center"
                        android:background="@color/yellow_100"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/page_yellow_label2_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_symb_plus"
                            android:layout_marginEnd="5dp"/>
                        <TextView
                            android:id="@+id/page_yellow_label2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Event"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/agenda_confirmEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:backgroundTint="@color/green_600"
                        app:tint="@color/white"
                        android:src="@drawable/ic_tick"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="15dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>