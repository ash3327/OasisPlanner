<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shp_tag_bg"
    android:backgroundTint="@color/grey_100"
    android:id="@+id/tag_chip"
    android:gravity="center"
    android:orientation="horizontal"

    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_tv"
        android:text="default"
        android:focusable="false"
        />
    <ImageView
        android:id="@+id/tag_cross"
        android:layout_width="@dimen/medium_small_icon_height"
        android:layout_height="@dimen/medium_small_icon_height"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_circle_cross"/>
</LinearLayout>