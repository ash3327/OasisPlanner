<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- DATA CLASS -->
    <data class="MemoPageBinding"/>

    <!-- CLICKING AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_50"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/page_banner_height"

                        android:layout_marginBottom="@dimen/box_vmargin">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src='@drawable/blur_v1'
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/page_agenda_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:paddingStart="@dimen/bar_padding_aftr"
                                android:paddingEnd="@dimen/bar_padding_aftr"
                                android:layout_marginVertical="5dp"

                                app:layout_constraintBottom_toTopOf="@id/page_title"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/type_memo"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                />
                            <EditText
                                android:id="@+id/page_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="15dp"
                                android:textSize="20sp"
                                android:gravity="left"
                                android:letterSpacing="0.1"
                                android:textColor="@color/white"
                                android:textStyle="bold"

                                android:theme="@style/BarTheme.EditableTheme"
                                android:paddingStart="@dimen/bar_padding_aftr"
                                android:paddingEnd="@dimen/bar_padding_aftr"
                                android:background="@null"
                                android:hint="@string/no_title"

                                android:inputType="textMultiLine"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tag_content_til"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                app:boxBackgroundColor="@color/cream"
                                android:hint="@string/memo_content_title">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tag_content_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tag_tags_til"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                app:boxBackgroundColor="@color/cream"
                                android:hint="@string/memo_tag_title">
                                <com.aurora.oasisplanner.presentation.widget.taginputeidittext.TagInputEditText
                                    android:id="@+id/tag_tags_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </ScrollView>
                    <!--androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20sp"
                        android:paddingBottom="20dp"
                        android:id="@+id/page_sections"
                        tools:listitem="@layout/_page_displist"
                        tools:itemCount="1"/-->
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/memo_delete"
                        android:textColor="@color/red_500"
                        android:padding="10dp"
                        android:layout_marginHorizontal="5dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="15dp"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/memo_confirmEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:backgroundTint="@color/green_600"
                        app:tint="@color/white"
                        android:src="@drawable/ic_tick"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="15dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>