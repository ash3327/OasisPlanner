<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- DATA CLASS -->
    <data class="BoxEventBinding">
        <import type="android.view.View"/>
        <variable
            name="fgColor"
            type="int"/>
    </data>

    <!-- CLICKING AREA -->
    <LinearLayout
        android:id="@+id/box"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="@dimen/box_hmargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/bar_daytimelabel_width"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|start"
                android:paddingVertical="@dimen/bar_vpadding"
                android:layout_marginVertical="@dimen/box_widgets_padding_top">
                <TextView
                    android:id="@+id/box_toptag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text='9:00 AM'
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:paddingVertical="2dp"/>
                <TextView
                    android:id="@+id/box_bottomtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text='notif'
                    android:textColor="@color/grey"
                    android:letterSpacing="0.05"
                    android:paddingVertical="2dp"/>
            </LinearLayout>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="@dimen/medium_icon_height"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/bar_dot_hpadding">
                <View
                    android:layout_width="@dimen/bar_vbar_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/grey_100"/>
                <LinearLayout
                    android:layout_width="@dimen/medium_icon_height"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/box_widgets_padding_top">
                    <LinearLayout
                        android:layout_width="@dimen/medium_icon_height"
                        android:layout_height="@dimen/medium_icon_height"
                        android:layout_marginVertical="@dimen/bar_dot_vpadding"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/circ"
                            android:layout_width="@dimen/medium_icon_height"
                            android:layout_height="@dimen/medium_icon_height"
                            android:src="@drawable/shp_circ_filled"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/box_widgets_padding_top_more"
                android:layout_marginBottom="@dimen/box_widgets_padding_top_less">
                <LinearLayout
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_700"
                    android:foreground="@drawable/border_grey"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/triangle"
                            android:layout_width="34dp"
                            android:layout_height="33dp"
                            android:background="@drawable/shp_triangle"

                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="@dimen/bar_vpadding">

                            <TextView
                                android:id="@+id/bar_title"
                                android:layout_width="214dp"
                                android:layout_height="wrap_content"
                                android:text='title'
                                android:textColor="@{fgColor}"
                                android:theme="@style/BarTheme" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/bar_event_descAndLoc">
                                <LinearLayout
                                    android:id="@+id/bar_desc_text_lay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/bar_icon"
                                        android:layout_height="@dimen/icon_height"
                                        android:layout_width="@dimen/icon_height"
                                        android:src="@drawable/ic_agendatype_calendar"
                                        app:tint="@{fgColor}"
                                        android:scaleType="centerCrop"/>
                                    <TextView
                                        android:id="@+id/bar_description_text"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:theme="@style/BarContentTheme"
                                        android:text='description'
                                        android:textColor="@{fgColor}"
                                        android:layout_marginStart="@dimen/box_widges_icon_right_padding"/>
                                </LinearLayout>
                                <!-- Location -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:id="@+id/bar_loc_subBar">
                                    <ImageView
                                        android:id="@+id/bar_loc_icon"
                                        android:layout_height="@dimen/icon_height"
                                        android:layout_width="@dimen/icon_height"
                                        android:src="@drawable/ic_location"
                                        app:tint="@{fgColor}"
                                        android:scaleType="centerCrop" />
                                    <TextView
                                        android:id="@+id/bar_loc_text"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:theme="@style/BarContentTheme"
                                        android:text='location'
                                        android:textColor="@{fgColor}"
                                        android:layout_marginStart="@dimen/box_widges_icon_right_padding"/>
                                </LinearLayout>
                                <HorizontalScrollView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:id="@+id/box_event_tags_scroll">
                                    <com.aurora.oasisplanner.presentation.widget.taginputeidittext.TagInputEditText
                                        android:id="@+id/box_event_tags"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:inputType="none"
                                        android:background="@null"
                                        android:textSize="11sp"
                                        app:editable="false"/>
                                </HorizontalScrollView>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>