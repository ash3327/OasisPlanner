<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/tag_datetime_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/tag_date_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/icon_top"
            android:layout_width="@dimen/medium_icon_height"
            android:layout_height="@dimen/medium_icon_height"
            android:layout_margin="@dimen/edit_alarm_icon_padding"
            android:src="@drawable/ic_type_agenda"
            app:tint="@color/grey_300"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tag_date_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxBackgroundColor="@color/cream">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tag_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tag_date_type_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:paddingStart="6dp"
            android:hint="@string/tab_tag_date_title"
            app:boxBackgroundColor="@color/cream">
            <AutoCompleteTextView
                android:id="@+id/tag_date_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tag_time_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/icon_bottom"
            android:layout_width="@dimen/medium_icon_height"
            android:layout_height="@dimen/medium_icon_height"
            android:layout_margin="@dimen/edit_alarm_icon_padding"
            android:src="@drawable/ic_symb_time"
            app:tint="@color/grey_300"/>
        <NumberPicker
            android:id="@+id/tag_time_hour_picker"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@color/cream"/>
        <NumberPicker
            android:id="@+id/tag_time_minute_picker"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@color/cream"/>
    </LinearLayout>
</LinearLayout>