<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/tag_content_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/edit_alarm_args_view_vpadding"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/medium_icon_height"
            android:layout_height="@dimen/medium_small_icon_height"
            android:layout_marginStart="@dimen/edit_alarm_icon_padding"
            android:layout_marginEnd="@dimen/edit_alarm_args_icon_rpadding"
            android:src="@drawable/ic_type_note"
            app:tint="@color/grey_300"/>
        <TextView
            android:id="@+id/tag_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_tag_content_title"

            android:textSize="15sp"
            android:textColor="@color/grey_300"
            android:letterSpacing="0.05"/>
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/medium_small_icon_height"
            android:layout_height="@dimen/medium_small_icon_height"
            android:src="@drawable/ic_symb_remove"
            app:tint="@color/black"

            android:layout_marginStart="@dimen/edit_alarm_args_icon_rpadding"
            android:layout_marginEnd="@dimen/edit_alarm_icon_padding"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tag_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:inputType="text"
        android:theme="@style/BarContentTheme.EditableTheme"
        />
</LinearLayout>